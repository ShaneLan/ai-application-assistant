{
  "version": 2,
  "builds": [
    {
      "src": "/backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "framework": "create-react-app",
        "installCommand": "npm i"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/index.js" },
    { "src": "/(.*)", "dest": "/frontend" }
  ]
}
